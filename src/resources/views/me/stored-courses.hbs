
<div class="container">
    <h2>Khóa học của tôi</h2>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Serial</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Level</th>
                <th scope="col">Edit Course</th>
            </tr>
        </thead>
        <tbody>
            {{#each courses}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.name}}</td>
                    <td>{{this.description}}</td>
                    <td>{{this.level}}</td>
                    <td>
                        <a href="" class="btn btn-link get-id" id="{{this._id}}" data-toggle="modal" data-target="#delete-course">Delete</a>
                        <a href="/courses/{{this._id}}/edit" class="btn btn-link">Edit</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{!-- model --}}
<div class="modal" id="delete-course" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa khóa học?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa khóa học?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btn-delete-course">Đồng ý.</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy!</button>
            </div>
        </div>
    </div>
</div>

<form method="POST" name="delete-modal-course"></form>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        var btnDeleteCourse = document.getElementById('btn-delete-course');
        var deleteForm = document.forms['delete-modal-course'];
        var idCourse;

        $(document).ready(function() {
            idCourse = $('.get-id').attr('id');
        }); 
        btnDeleteCourse.onclick = () => {
            deleteForm.action = `/courses/${idCourse}?_method=DELETE`
            deleteForm.submit();
        }
    })
    
</script>